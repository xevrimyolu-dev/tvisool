[Unit]
Description=Gunicorn for Flask app
After=network.target

[Service]
User=deploy
Group=www-data
WorkingDirectory=/var/www/app
Environment=PATH=/var/www/app/venv/bin
ExecStart=/var/www/app/venv/bin/gunicorn --workers 5 --worker-class gthread --threads 4 --timeout 300 --bind 127.0.0.1:8000 app:app
Restart=always

[Install]
WantedBy=multi-user.target