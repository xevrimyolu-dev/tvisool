server {
    server_name toolvisione.shop www.toolvisione.shop;

    # --- EKlenen AYARLAR (Dosya Yükleme Limiti) ---
    client_max_body_size 500M;   # 100 MB'a kadar izin ver
    proxy_read_timeout 600s;     # Yükleme uzun sürerse zaman aşımına uğrama
    proxy_connect_timeout 60s;
    proxy_send_timeout 600s;
    proxy_request_buffering off; # Dosyayı bekletmeden içeri al
    # ----------------------------------------------

    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/toolvisione.shop/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/toolvisione.shop/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot
}

server {
    if ($host = www.toolvisione.shop) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = toolvisione.shop) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name toolvisione.shop www.toolvisione.shop;
    return 404; # managed by Certbot
}